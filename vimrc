" Enable syntax highlighting
syntax enable

" Disable backup
set nobackup
set nowb
set noswapfile

" Enable indentation
set tabstop=2
set shiftwidth=2
set expandtab
set smarttab
set autoindent
set smartindent

" Enable status line
set laststatus=2

" Keep 10 lines visible above/under the cursor
set so=10

" Enable mouse
set mouse=a

" Avoid the escape key
imap jj <Esc>

" Add an alternative to Ctrl-W
map <Tab> <C-W>
