"systemctl --user exit"
  Alt + Shift + E

"termite"
  Alt + Return

"tmux list-sessions | dmenu | egrep -o ^[0-9]+ | xargs echo tmux attach-session -t | xargs -0 termite -e"
  Alt + Shift + Return

"dmenu_run"
  Alt + D

"systemctl --user is-active tint2 && systemctl --user stop tint2 || systemctl --user start tint2"
  Alt + Pause

"setxkbmap $(setxkbmap -query |awk -F: -e '/layout: +fr/ { print "us" } /layout: +us/ { print "fr" }')"
  Alt + Shift + Pause

"ncmpcpp toggle"
  XF86AudioPlay

"ncmpcpp stop"
  Control + XF86AudioPlay

"ncmpcpp prev"
  XF86AudioPrev

"ncmpcpp next"
  XF86AudioNext

"amixer set Surround toggle"
  XF86AudioMute

"amixer set Surround off"
  Control + XF86AudioMute

"amixer set Surround 4%+"
  XF86AudioRaiseVolume

"amixer set Surround 4%-"
  XF86AudioLowerVolume
