"systemctl --user stop X@${DISPLAY}.target"
  Alt + Shift + E

"termite"
  Alt + Return

"tmux list-sessions | dmenu | egrep -o ^[0-9]+ | xargs echo tmux attach-session -t | xargs -0 termite -e"
  Alt + Shift + Return

"dmenu_run"
  Alt + D

"systemctl --user is-active tint2@${DISPLAY} && systemctl --user stop tint2@${DISPLAY} || systemctl --user start tint2@${DISPLAY}"
  Alt + Pause

"setxkbmap $(setxkbmap -query |awk -F: -e '/layout: +fr/ { print "us" } /layout: +us/ { print "fr" }')"
  Alt + Shift + Pause

"ncmpcpp toggle"
  XF86AudioPlay

"ncmpcpp stop"
  Control + XF86AudioPlay

"ncmpcpp prev"
  XF86AudioPrev

"ncmpcpp next"
  XF86AudioNext

"ncmpcpp volume +50"
  Control + XF86AudioRaiseVolume

"ncmpcpp volume -50"
  Control + XF86AudioLowerVolume

"~/.config/pulse/switch-sink.sh"
  XF86AudioMute

"[[ $(pacmd stat | awk -F': ' '$1 == "Default sink name" { print $2 }' ) == 'headphones' ]] || ~/.config/pulse/switch-sink.sh"
  Control + XF86AudioMute

"~/.config/pulse/set-volume-relative.sh +4"
  XF86AudioRaiseVolume

"~/.config/pulse/set-volume-relative.sh -4"
  XF86AudioLowerVolume
