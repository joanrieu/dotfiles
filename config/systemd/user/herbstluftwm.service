[Unit]
Description=Herbstluft Window Manager
Requires=X.service
After=X.service

[Service]
Type=notify
ExecStart=/usr/bin/herbstluftwm --locked
ExecReload=/usr/bin/herbstclient reload
ExecStop=/usr/bin/herbstclient quit
NotifyAccess=all

[Install]
Alias=X-window-manager.service
WantedBy=graphical.target
