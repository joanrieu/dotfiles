ctl.!default {
	type hw
	card Intel
}

pcm.!default {
	@func refer
	name { @func concat
		strings [
			"pcm."
			{ @func getenv
				vars [ ALSA_DEFAULT_PCM ]
				default dmixer
			}
		]
	}
}

pcm.dmixer {
	type plug
	slave.pcm rawdmixer
	hint {
		show on
		description "DMix'ed output"
	}
}

pcm.rawdmixer {
	type dmix
	ipc_key 1024
	slave.pcm {
		type hw
		card Intel
	}
	hint.show off
}

pcm.filerec {
	type file
	slave.pcm dmixer
	file "/tmp/alsa-filerec.wav"
	format wav
	hint {
		show on
		description "Record to /tmp/alsa-filerec.wav"
	}
}

pcm.jack {
	type plug
	slave.pcm rawjack
	hint {
		show on
		description "JACK Audio Connection Kit"
	}
}

pcm.rawjack {
	type jack
	playback_ports {
		0 system:playback_1
		1 system:playback_2
	}
	capture_ports {
		0 system:capture_1
		1 system:capture_2
	}
	hint.show off
}
